<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/accent_transparency"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    >
    <RelativeLayout
        android:id="@+id/parent_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_horizontal_margin_half"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin_half">
        <TextView
            android:id="@+id/txt_itm_salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4125"
            android:textSize="25dp"
            android:textStyle="bold|italic"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/txt_itm_grupo"
            android:layout_toRightOf="@id/txt_itm_salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:text="9CM11"
            android:textSize="20dp"
            android:textStyle="bold|italic"
            android:paddingBottom="2dp"/>
        <TextView
            android:id="@+id/txt_itm_materia"
            android:layout_below="@id/txt_itm_salon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redes Basicas"
            android:textSize="20dp"
            android:textStyle="italic"/>


        <TextView
            android:id="@+id/txt_itm_blank"
            android:layout_below="@id/txt_itm_salon"
            android:layout_toRightOf="@id/txt_itm_materia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      "
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txt_itm_profe"
            android:layout_below="@id/txt_itm_materia"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Benito Juarez"
            android:textSize="20dp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/txt_itm_hora"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7:00-8:30"
            android:textSize="20dp"
            android:textStyle="italic"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>